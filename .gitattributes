# Text files
*.html          text eol=lf
*.liquid        text eol=lf
*.md            text eol=lf
*.py            text eol=lf
*.txt           text eol=lf
*.yaml          text eol=lf
*.yml           text eol=lf

# Unix-only files that need to be LF
*.sh            text eol=lf

# Windows-only files that need to be CRLF
*.bat           text eol=crlf
*.cmd           text eol=crlf
*.ps1           text eol=crlf

# Binary files that should not be modified
*.arc           binary
*.brres         binary
*.cmpres        binary
*.frb           binary
*.png           binary
*.webp          binary

# Exclude files from exporting
.gitattributes  export-ignore
.gitignore      export-ignore
